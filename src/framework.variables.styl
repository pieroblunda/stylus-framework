// https://medium.com/swlh/the-comprehensive-8pt-grid-guide-aa16ff402179
// https://www.gridlover.net/try

// Margins
$framework-sizebase = 8px

// Theme framework
:root
  // 8px grid based
  --size-100 $framework-sizebase * 0.125 // 1px
  --size-200 $framework-sizebase * 0.25 // 2px
  --size-300 $framework-sizebase * 0.5  // 4px
  --size-400 $framework-sizebase        // 8px
  --size-500 $framework-sizebase * 2    // 16px
  --size-600 $framework-sizebase * 3    // 24px
  --size-700 $framework-sizebase * 4    // 32px 
  --size-800 $framework-sizebase * 5    // 48px
  --size-900 $framework-sizebase * 8    // 64px

  // Font size
  // https://type-scale.com
  // It use perfect Four scale (1.333) with 12px base size
  $framework-scale = 1.333
  --fontsizebase 16px

  // Theme framework
  --fontsize-100 0.563rem
  --fontsize-200 0.75rem
  --fontsize-300 1rem
  --fontsize-400 1.333rem
  --fontsize-500 1.777rem
  --fontsize-600 2.369rem
  --fontsize-700 3.157rem
  --fontsize-800 4.209rem
  --fontsize-900 5.61rem

  // Color pallette
  // https://coolors.co/gradient-palette/000000-dfdfdf?number=9
  --colorBlack-100 #dfdfdf
  --colorBlack-200 #c3c3c3
  --colorBlack-300 #a7a7a7
  --colorBlack-400 #8b8b8b
  --colorBlack-500 #707070
  --colorBlack-600 #545454
  --colorBlack-700 #383838
  --colorBlack-800 #1c1c1c
  --colorBlack-900 #000000
  
  // Color pallette
  // https://coolors.co/palette/e3f2fd-bbdefb-90caf9-64b5f6-42a5f5-2196f3-1e88e5-1976d2-1565c0-0d47a1
  --colorBlue-000 #F0F8FF
  --colorBlue-100 #BBDEFB
  --colorBlue-200 #90CAF9
  --colorBlue-300 #64B5F6
  --colorBlue-400 #42A5F5
  --colorBlue-500 #2196F3
  --colorBlue-600 #1E88E5
  --colorBlue-700 #1976D2
  --colorBlue-800 #1565C0
  --colorBlue-900 #0D47A1
  
  // Z-index
  --zindex-search-modal 99999
  
