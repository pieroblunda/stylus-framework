/* ------- GRID ------ */
/* ------------------- */
.row
  display flex
.col
  flex 1
  
.grid
  display grid
  grid-template-columns repeat(2, 1fr)
  grid-template-rows 1fr
  
.grid
.row
  &.gap-8
    grid-column-gap 8px
    grid-row-gap 8px
  &.gap-16
    grid-column-gap 16px
    grid-row-gap 16px
  
@media screen and (min-width: 1024px)
  .grid
    &.desktop-4-colums
      grid-template-columns repeat(4, 1fr)
    &.desktop-5-colums
      grid-template-columns repeat(5, 1fr)
